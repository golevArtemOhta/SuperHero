<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.description.DescriptionFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_img_desc"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_hero_desc"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/hero_example" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Batman"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_img_desc" />

    <TextView
        android:id="@+id/tv_attack_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/attack_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_hero_name"
        app:layout_constraintStart_toStartOf="@+id/cardview_img_desc"/>

    <TextView
        android:id="@+id/tv_attack_type_hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_attack_type"
        app:layout_constraintStart_toEndOf="@+id/tv_attack_type"
        app:layout_constraintTop_toTopOf="@+id/tv_attack_type" />

    <TextView
        android:id="@+id/tv_roles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/roles"
        app:layout_constraintTop_toBottomOf="@+id/tv_attack_type"
        app:layout_constraintStart_toStartOf="@+id/cardview_img_desc"/>

    <TextView
        android:id="@+id/tv_roles_hero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:text="Male"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_roles"
        app:layout_constraintTop_toTopOf="@+id/tv_roles" />




</androidx.constraintlayout.widget.ConstraintLayout>